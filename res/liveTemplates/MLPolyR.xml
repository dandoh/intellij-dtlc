<templateSet group="MLPolyR">
	<template name="let" value="let&#10;  $defs$&#10;in&#10;  $END$&#10;end"
	          description="let ... in ... end" toReformat="true"
	          toShortenFQNames="true">
		<variable name="defs" expression="" defaultValue="" alwaysStopAt="true"/>
		<context>
			<option name="MLPOLYR_DEFAULT_CONTEXT_ID" value="true"/>
		</context>
	</template>
	<template name="fun" value="fun $name$ $params$ = $end$"
	          description="fun .. = ..." toReformat="true"
	          toShortenFQNames="true">
